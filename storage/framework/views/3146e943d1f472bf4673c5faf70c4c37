            <td data-title="Date"><?php echo e(date('d/m/Y', strtotime($ccperson->created_at))); ?></td>
            <td data-title="S/N"><?php echo e($ccperson->case_number); ?></td>
            <td data-title="Type of Request"><?php echo e($ccperson->type_request); ?></td>
            <td data-title="Title"><?php if($ccperson->title): ?><?php echo e($ccperson->title); ?> <?php else: ?> <?php echo e($ccperson->form_name); ?> <?php endif; ?></td>
            <td data-title="Creator"><?php echo e($ccperson->name); ?></td>
            <td data-title="Type">
                    <?php if($ccperson->urgency == 1): ?> 
                        Normal
                    <?php else: ?> 
                        Urgent
                    <?php endif; ?>
            </td>
            <td data-title="Department"><?php echo e($ccperson->department); ?></td>
            <td data-title="Status">
                <?php if($ccperson->status == 0): ?> 
                    <span class="alert-black">Pending</span>
                <?php elseif($ccperson->status == 1): ?>
                    <span class="alert-black">Approved</span>
                <?php elseif($ccperson->status == 2): ?>
                    <span class="alert-black">Rejected</span>
                <?php elseif($ccperson->status == 3): ?>
                    <span class="alert-black">Cancelled</span>
                 <?php elseif($ccperson->status == 4): ?>
                    <span class="alert-black">Forwarded</span>
                <?php endif; ?>
            </td>
