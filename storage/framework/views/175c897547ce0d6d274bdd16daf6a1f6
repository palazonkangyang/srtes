  </div><!-- end print-table -->
  <?php endif; ?>
</div><!-- end row -->

<div class="wrap-content">

  <?php if(count($pendinglist)): ?>

  <div class="row">
    <div id="no-more-tables">
     <table class="col-md-12 table-bordered table-striped table-condensed cf">
        <thead class="cf">
          <th>Date</th>
          <th>S/N</th>
          <th>Type of Request</th>
          <th>Title</th>
          <th>Creator</th>
          <th>Approver</th>
          <th>Urgency</th>
          <th>Department</th>
          <th>Status</th>
        </thead>

        <tbody>
          <?php foreach($pendinglist as $pending): ?>
          <tr class="clickable-row" data-href="/application/view_details/<?php echo e($pending->id); ?>">
            <td data-title="Date"><?php echo e(date('d/m/Y', strtotime($pending->created_at))); ?></td>
            <td data-title="S/N"><?php echo e($pending->case_number); ?></td>
            <td data-title="Type of request"><?php echo e($pending->type_request); ?></td>
            <td data-title="Title"><?php if($pending->title): ?><?php echo e($pending->title); ?> <?php else: ?> <?php echo e($pending->form_name); ?> <?php endif; ?></td>
            <td data-title="Creator"><?php echo e($pending->name); ?></td>
            <td data-title="Approver"><?php echo e($pending->temp_approver_name); ?></td>
            <td data-title="Type">
              <?php if($pending->urgency == 1): ?>
                Normal
              <?php else: ?>
                Urgent
              <?php endif; ?>
            </td>
            <td data-title="Department"><?php echo e($pending->department); ?></td>
            <td data-title="Status">
              <?php if($pending->status == 0): ?>
                <span class="alert-black">Pending</span>
              <?php elseif($pending->status == 1): ?>
                <span class="alert-black">Approved</span>
              <?php elseif($pending->status == 2): ?>
                <span class="alert-black">Rejected</span>
              <?php elseif($pending->status == 3): ?>
                <span class="alert-black">Cancelled</span>
              <?php elseif($pending->status == 4): ?>
                <span class="alert-black">Forwarded</span>
              <?php elseif($pending->status == 6): ?>
                <span class="alert-black">Feedback Required</span>
              <?php elseif($pending->status == 7): ?>
                <span class="alert-black">Feedback Given</span>
              <?php endif; ?>
            </td>
          </tr>
          <?php endforeach; ?>
        </tbody>
      </table>
    </div><!-- end no-more-tables -->
  </div><!-- end row -->

  <?php else: ?>
    <span class="no-data-display">No data to display.</span>
  <?php endif; ?>

</div><!-- end wrap-content -->

<?php $__env->stopSection(); ?>

