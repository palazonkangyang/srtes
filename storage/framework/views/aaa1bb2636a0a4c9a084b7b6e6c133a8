      <th><?php echo $myapplist->sortColumn('case_number','S/N'); ?></th>
      <th><?php echo $myapplist->sortColumn('type_request','Type of Request'); ?></th>
      <th>Title</th>
      <th>Urgency</th>
      <th><?php echo $myapplist->sortColumn('department','Department'); ?></th>
      <th><?php echo $myapplist->sortColumn('status','Status'); ?></th>
    </thead>

    <tbody>
      <?php foreach($myapplist as $myapp): ?>
      <tr class="clickable-row" data-href="/application/view_details/<?php echo e($myapp->id); ?>">
        <td data-title="Date"><?php echo e(date('d/m/Y', strtotime($myapp->created_at))); ?></td>
        <td data-title="S/N"><?php echo e($myapp->case_number); ?></td>
        <td data-title="Type of Request"><?php echo e($myapp->type_request); ?></td>
        <td data-title="Title"><?php if($myapp->title): ?><?php echo e($myapp->title); ?> <?php else: ?> <?php echo e($myapp->form_name); ?> <?php endif; ?></td>

        <td data-title="Urgency">
          <?php if($myapp->urgency == 1): ?>
            Normal
          <?php else: ?>
            Urgent
          <?php endif; ?>
        </td>
        <td data-title="Department"><?php echo e($myapp->department); ?></td>
        <td data-title="Status">
          <?php if($myapp->status == 0): ?>
            <span class="alert-black">Pending</span>
          <?php elseif($myapp->status == 1): ?>
            <span class="alert-black">Approved</span>
          <?php elseif($myapp->status == 2): ?>
            <span class="alert-black">Rejected</span>
          <?php elseif($myapp->status == 3): ?>
            <span class="alert-black">Cancelled</span>
          <?php elseif($myapp->status == 4): ?>
            <span class="alert-black">Forwarded</span>
          <?php endif; ?>
        </td>
      </tr>
      <?php endforeach; ?>
    </tbody>
</table>
